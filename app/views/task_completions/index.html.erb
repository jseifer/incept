<%- model_class = TaskCompletion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:interval) %></th>
      <th><%= model_class.human_attribute_name(:interval_modifier) %></th>
      <th><%= model_class.human_attribute_name(:last_completed) %></th>
      <th><%= model_class.human_attribute_name(:completed_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @task_completions.each do |task_completion| %>
      <tr>
        <td><%= link_to task_completion.id, task_completion_path(task_completion) %></td>
        <td><%= task_completion.interval %></td>
        <td><%= task_completion.interval_modifier %></td>
        <td><%= task_completion.started_at %></td>
        <td><%= task_completion.completed_at %></td>
        <td><%=l task_completion.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_task_completion_path(task_completion), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      task_completion_path(task_completion),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_task_completion_path,
            :class => 'btn btn-primary' %>
